                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding isReceived}" Value="false"/>
                                                            <Condition Binding="{Binding isRegistered}" Value="false"/>
                                                            <Condition Binding="{Binding isAvailable}" Value="false"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="собственнику: "/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock FontSize="12" Foreground="LightGray" Text="{Binding To}"/>
                                </StackPanel>

                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </StackPanel>



    <Page.Resources>
        <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <!-- Стилизованный кружок -->
                            <Border Width="20" Height="20" 
                                CornerRadius="10" 
                                BorderBrush="LightGray" 
                                BorderThickness="2" 
                                Background="Transparent"
                                VerticalAlignment="Center">
                                <Ellipse Width="12" Height="12" 
                                     Fill="Transparent" 
                                     x:Name="ellipse"/>
                            </Border>

                            <!-- Текст рядом с кружком -->
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <!-- Изменение внешнего вида при наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ellipse" Property="Fill" Value="#3DDDC2"/>
                            </Trigger>
                            <!-- Изменение внешнего вида при выборе -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ellipse" Property="Fill" Value="#FFD700"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>


                                <StackPanel>
                                    <!-- TextBlock для "Зарегистирован", "Собственник получил", и т.д. -->
                                    <TextBlock FontSize="12" Foreground="LightGray">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value=""/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding isReceived}" Value="false"/>
                                                            <Condition Binding="{Binding isRegistered}" Value="true"/>
                                                            <Condition Binding="{Binding isAvailable}" Value="true"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="Зарегистирован: "/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding isReceived}" Value="true"/>
                                                            <Condition Binding="{Binding isRegistered}" Value="false"/>
                                                            <Condition Binding="{Binding isAvailable}" Value="true"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="Собственник получил: "/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding isReceived}" Value="false"/>
                                                            <Condition Binding="{Binding isRegistered}" Value="false"/>
                                                            <Condition Binding="{Binding isAvailable}" Value="false"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="Собственник передал: "/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- TextBlock для отображения документа -->
                                    <TextBlock FontSize="12" Foreground="LightGray" Text="{Binding Document}"/>

                                    <!-- TextBlock для отображения кому передан документ -->
                                    <TextBlock FontSize="12" Foreground="LightGray">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
